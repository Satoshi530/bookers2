      <h1>User info</h1>
      <%= image_tag user.get_profile_image(100,100) %>
        <table class="table">
          <tr>
            <th>name</th><td><%= user.name %></td>
          </tr>
          <tr>
            <th>introduction</th><td><%= user.introduction %></td>
          </tr>
          <tr>
            <th>follows:</th>
            <td>
            <%= link_to user.followings.count, user_followings_path(user.id) %></td>
          </tr>
          <tr>
            <th>followers:</th>
            <td>
              <%= link_to user.followers.count, user_followers_path(user.id) %></td>
          </tr>
        </table>
          <%= render 'relationships/btn', user: user %>
        <div class='row'>
          <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
          <h1>New book</h1>
          <%= form_with model: book do |f| %>

         <div class= "form-group">
           <%= f.label :Title %>
           <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class= "form-group">
          <%= f.label :Opinion %>
          <%= f.text_field :body, class: 'form-control' %>
          </div>

          <div class="actions">
          <%= f.submit "Create Book", class: 'btn btn-sm btn-success' %>
          </div>
          <% end %>


